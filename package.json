{
  "name": "benri-na-chatwork",
  "version": "2.0.0",
  "description": "ChatWorkをより便利にするChrome拡張機能",
  "private": true,
  "scripts": {
    "prebuild": "npm run lint && npm run format && rimraf dist/data",
    "build": "npm run prebuild && webpack && bestzip dist/benri-na-chatwork.zip dist/data/*",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,css,html,json}\""
  },
  "keywords": [
    "chrome-extension",
    "chatwork",
    "productivity"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "bestzip": "^2.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
