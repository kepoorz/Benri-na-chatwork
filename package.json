{
  "name": "benri-na-chatwork",
  "version": "2.0.0",
  "description": "ChatWorkをより便利にするChrome拡張機能",
  "private": true,
  "scripts": {
    "prebuild": "npm run lint && npm run format && rimraf dist/data",
    "build": "npm run prebuild && webpack && bestzip dist/benri-na-chatwork.zip dist/data/*",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,css,html,json}\""
  },
  "keywords": [
    "chrome-extension",
    "chatwork",
    "productivity"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@eslint/js": "^10.0.1",
    "babel-loader": "^10.0.0",
    "bestzip": "^2.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.4",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "style-loader": "^4.0.0",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  }
}
